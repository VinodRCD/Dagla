<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="textEmailAddress"
            android:hint="@string/email_address_ar"
            android:textStyle="normal"
            android:fontFamily="@font/ge_dinar_one_light"
            android:gravity="right"/>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="textPassword"
            android:hint="@string/password_ar"
            android:layout_marginTop="25dp"
            android:textStyle="normal"
            android:fontFamily="@font/ge_dinar_one_light"
            android:gravity="right"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_ar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/ge_dinar_one_medium"
            android:textAllCaps="false"
            android:background="@drawable/bg_1"
            android:layout_marginTop="25dp" />

        <Button
            style="@style/btnLinkAr"
            android:id="@+id/btnForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="textEnd"
            android:drawablePadding="10dp"
            android:text="@string/forgot_password__ar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#222222"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@android:color/white"
                android:text="@string/dont_have_an_account_ar"
                android:textStyle="bold"
                android:fontFamily="@font/ge_dinar_one_medium"
                android:textAlignment="center"
                android:textColor="#222222"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnRegister"
                style="@style/btnLinkAr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="@string/register_now_ar" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#222222" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pnlRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:visibility="gone">

                <Button
                    style="@style/btnLinkAr"
                    android:id="@+id/btnRegister2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_now_ar"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#222222" />

            </LinearLayout>

            <TextView
                android:id="@+id/lblOR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/or_ar"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:visibility="gone"
                android:textStyle="bold"
                android:fontFamily="@font/ge_dinar_one_light"/>

            <LinearLayout
                android:id="@+id/pnlExpressCheckout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:visibility="gone">

                <Button
                    style="@style/btnLinkAr"
                    android:id="@+id/btnExpressCheckout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/express_checkout_ar"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#222222" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>