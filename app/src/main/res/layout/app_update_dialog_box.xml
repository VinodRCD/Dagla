<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_background"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:singleLine="true"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:typeface="normal"
        android:padding="15dp"></TextView>

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/alertTitle"
        android:text="Are you sure you want to logout?"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:typeface="normal"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"></TextView>

    <View
        android:id="@+id/viewAlert"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/alertMessage"
        android:background="#A9A9A9"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/viewAlert">



        <TextView
            android:id="@+id/okText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/viewAlert2"
            android:text="Update"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#0080FF"
            android:textStyle="normal"
            android:typeface="normal"
            android:padding="15dp"
            android:gravity="center"
            android:layout_weight="1"></TextView>

        <View
            android:id="@+id/viewAlert2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#A9A9A9"/>

        <TextView
            android:id="@+id/cancelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/viewAlert2"
            android:text="Cancel"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="#0080FF"
            android:textStyle="normal"
            android:typeface="normal"
            android:padding="15dp"
            android:gravity="center"
            android:layout_weight="1"></TextView>

    </RelativeLayout>

</RelativeLayout>