<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <ListView
        android:id="@+id/lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pnlFooter"/>

    <LinearLayout
        android:id="@+id/pnlFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#222222"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:id="@+id/itemsQtyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblItemsQtyTxt"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textAllCaps="false"
                android:text="@string/items"
                android:textStyle="normal"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/symbol1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text=":"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/lblItemsQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text="0"
                android:textStyle="normal"
                android:fontFamily="@font/avenir_next_medium"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/subTotalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSubTotalTxt"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textAllCaps="false"
                android:text="@string/sub_total"
                android:textStyle="normal"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/symbol2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text=":"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/lblSubTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text="0"
                android:textStyle="normal"
                android:fontFamily="@font/avenir_next_medium"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deliveryChargeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblDeliveryChargeTxt"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textAllCaps="false"
                android:text="@string/delivery_charges"
                android:textStyle="normal"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/symbol3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text=":"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/lblDeliveryCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text="0"
                android:textStyle="normal"
                android:fontFamily="@font/avenir_next_medium"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTotalTxt"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:textAllCaps="false"
                android:text="@string/total"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/symbol4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text=":"
                android:textStyle="normal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/avenir_next_medium"/>

            <TextView
                android:id="@+id/lblTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222222"
                android:text="0"
                android:textStyle="bold"
                android:fontFamily="@font/avenir_next_medium"
                android:gravity="right"/>
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>